<% if events.empty? %>
  <h4 class="text-center">No event found.</h4>
<% else %>
  <table class="table table-bordered event-table">
    <thead>
      <tr>
        <th class="col-title" >Title</th>
        <th class="col-descr" >Description</th>
        <th class="col-startdate" >Start date</th>
        <th class="col-recurrence" >Recurrence</th>
      </tr>
    </thead>
    <tbody>
      <% events.each do |event| %>
        <tr>
          <td>
            <%= link_to event.title, edit_user_event_path(current_user, event) %>
            <%= link_to '(X)', user_event_path(current_user, event), method: :delete, class: 'delete-link',
                               data: { confirm: 'Are you sure?' }, remote: true %>
          </td>
          <td><%= event.description %></td>
          <td class="text-center"><%= event.schedule.start_time.to_date %></td>
          <td class="text-center"><%= event.recurrence.capitalize %></td>
        <tr>
      <% end %>
    </tbody>
  </table>
<% end %>
