<% content_for :title, "Events list" %>

<section class="event-search">
  <h1>Events</h1>

  <%= form_tag user_list_path(current_user), method: :get, remote: true, class: 'search' do %>
    <%= search_field_tag :search, params[:search], placeholder: 'Search by title' %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
</section>
<section class="event-list">
  <%= render partial: 'detailed_list', locals: { events: @events } %>
  <div class="pagination">
    <%= will_paginate @events, renderer: BootstrapPagination::Rails %>
  </div>
</section>
